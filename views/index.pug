extends layout

block content
  h1 To Do Items
  table
    thead
      tr
        th Description
        th Completed?
        th Actions
    tbody
      each item in toDoItems
        tr
          td= item.description
          td= item.completed
          td
            div.row
              if item.completed
                a(href=`incomplete/${item.id}`) Mark Incomplete
              else
                a(href=`complete/${item.id}`) Mark Complete
              a(href=`delete/${item.id}`) Delete Item
              a(href=`edit/${item.id}`) Edit Item

  a(href = "/add") Add Item